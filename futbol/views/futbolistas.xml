<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="futbol.list">
      <field name="name">Lista de futbolistas</field>
      <field name="model">futbol.futbolistas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Nombre"/>
          <field name="Equipo"/>
          <field name="Edad"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
   
    <record model="ir.actions.act_window" id="futbol.action_window">
      <field name="name">Venta de futbolistas</field>
      <field name="res_model">futbol.futbolistas</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
     <!-- como viene en el esqueleto -->
	 
    <record model="ir.actions.server" id="futbol.action_server">
      <field name="name">Futbolistas server</field>
      <field name="model_id" ref="model_futbol_futbolistas"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
     
